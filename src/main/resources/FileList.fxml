<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="Infinity" maxWidth="Infinity" minHeight="0" minWidth="0" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <TableView fx:id="table" onKeyReleased="#tableKey" onMouseClicked="#tableMouseEvent" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="checkBoxColumn" maxWidth="Infinity" minWidth="0" prefWidth="75.0" />
                <TableColumn fx:id="nameTableColumn" maxWidth="Infinity" minWidth="0" onEditCommit="#rename" prefWidth="75.0" text="名称" />
                <TableColumn fx:id="sizeTableColumn" maxWidth="Infinity" minWidth="0" prefWidth="75.0" text="大小" />
                <TableColumn fx:id="createTimeColumn" maxWidth="Infinity" minWidth="0" prefWidth="75.0" text="创建时间" />
            </columns>
        </TableView>
    </center>
    <top>
        <Label fx:id="label" maxHeight="Infinity" maxWidth="Infinity" minHeight="0" minWidth="0" onMouseClicked="#back" text="/" BorderPane.alignment="TOP_LEFT" />
    </top>
    <fx:define>
        <ContextMenu fx:id="contextMenu">
            <items>
                <MenuItem onAction="#getEditItem" text="重新命名"/>
                <MenuItem onAction="#getCreateFolderItem" text="新建文件" />
                <MenuItem onAction="#getMoveFileItem" text="移动文件" />
                <MenuItem onAction="#getSearchFileItem" text="搜索文件" />
                <MenuItem onAction="#getFlushItem" text="刷新文件" />
                <MenuItem onAction="#getFileInfoItem" text="文件信息" />
                <MenuItem onAction="#getDeleteItem" text="删除文件" />
                <MenuItem onAction="#getAddOffLineItem" text="离线下载" />
                <MenuItem onAction="#getOffLineltem" text="离线列表" />
            </items>
        </ContextMenu>
    </fx:define>
</BorderPane>
